{
  "name": "Pop-out Jitsi Meet",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Open Jitsi Meet videos in pop-out windows.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "980": "icons/icon980.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "src/browser_action/browser_action.html"
  },
  "web_accessible_resources": [
    "src/inject/index.html",
    "src/inject/index.js",
    "src/inject/video.html",
    "src/inject/video.js",
    "src/inject/jitsiFrame.js",
    "src/inject/jitsiConfig.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.jit.si/*",
        "https://8x8.vc/*",
        "https://jitsi.riot.im/*"
      ],
      "run_at": "document_start",
      "match_about_blank": true,
      "all_frames": true,
      "js": ["src/inject/inject.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://jip-hop.github.io/jitsi-pop/*"]
  }
}
